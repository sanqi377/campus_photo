.container {
  margin: 0 20px;
  margin-top: 55px;
}

.back image {
  width: 21px;
  height: 21px;
}

.logo {
  display: flex;
  justify-content: center;
  padding: 90px 0;
}

.logo image {
  width: 175px;
  height: 175px;
}

.form .label {
  margin-bottom: 8px;
  color: #B8B8B8;
  font-size: 14px;
}

.form .val input {
  padding: 0 2px;
  padding-bottom: 5px;
  color: #fff;
}

.form .val {
  border-bottom: 1px solid #707070;
  margin-bottom: 30px;
}

.btn {
  margin: 0 auto;
  margin-top: 60px;
  width: 80%;
  background: rgba(255, 255, 255, .6);
  padding: 15px 20px;
  text-align: center;
  border-radius: 8px;
}