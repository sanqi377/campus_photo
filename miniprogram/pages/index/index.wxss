.container {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.main {
  width: 100%;
  position: absolute;
  top: 25%;
  text-align: center;
}

.main .title {
  color: #fff;
  margin-bottom: 10px;
}

.main .title .major {
  font-size: 35px;
  margin-bottom: 10px;
  font-weight: bold;
}

.main .title .secondary {
  font-size: 20px;
}

.main .subtitle {
  color: #8A8A8A;
  font-size: 18px;
}

.main .subtitle>view {
  margin-bottom: 10px;
}

.main .subtitle>view:last-child {
  margin-bottom: 50px;
}

.main .button {
  color: #fff;
  display: flex;
  width: 100%;
  justify-content: center;
  flex-wrap: wrap;
  font-size: 21px;
}

.main .button>view {
  display: flex;
  align-items: center;
  justify-content: center;
}

.main .button .create {
  background: #A1A2A7;
  border-radius: 31px;
  width: 234px;
  height: 62px;
  margin-bottom: 40px;
}

.main .button .join {
  border-radius: 31px;
  border: 1px solid #A1A2A7;
  width: 234px;
  height: 62px;
}

.main .button .icon {
  margin-right: 6px;
}

.main .button .create .icon {
  width: 24px;
  height: 22px;
}

.main .button .join .icon {
  width: 25px;
  height: 24px;
}

.poppus {
  color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(255, 255, 255, .15);
  border-radius: 8px;
  padding: 30px;
}

.poppus .content {
  width: 240px;
  height: 220px;
}

.poppus .content .title {
  text-align: center;
  font-size: 22px;
}

.poppus .content .btn-group {
  margin: 25px 0;
}

.poppus .content .btn-group>view {
  border: 1px solid #87898E;
  border-radius: 30px;
  padding: 15px 0;
  font-size: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.poppus .content .btn-group view:first-child image {
  margin-top: 2px;
}

.poppus .content .btn-group image {
  width: 23px;
  height: 23px;
  margin-right: 7px;
}

.poppus .content .btn-group .scan-code {
  margin-bottom: 30px;
}

.mask-layer {
  position: absolute;
  top: 0;
  width: 100vw;
  height: 100vh;
  background-image: linear-gradient(#37393D, #0F131B);
}