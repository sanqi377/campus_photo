.tab-bar {
  background: #2F323A;
  display: flex;
  justify-content: space-around;
  padding: 15px 0;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item:nth-child(1) .icon {
  width: 26px;
  height: 26px;
}

.tab-bar-item:nth-child(2) .icon {
  width: 32px;
  height: 32px;
}

.tab-bar-item:nth-child(3) .icon {
  width: 26px;
  height: 25px;
}

.tab-bar-item:nth-child(4) .icon {
  width: 36px;
  height: 32px;
}

.icon {
  margin-bottom: 5px;
}

.name {
  font-size: 12px;
}